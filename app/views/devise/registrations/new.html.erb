<div id="block-login" class="block">
  <h2>Create an account</h2>
  <div class="content login">

<%= render "shared/error_messages" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form login" }) do |f| %>
    <div class="group wat-cf">
      <div class="left"><%= f.label :name, :class => "label right" %></div>
      <div class="right"><%= f.text_field :name, :class => "text_field" %></div>
    </div>
    <div class="group wat-cf">
      <div class="left"><%= f.label :email, :class => "label right" %></div>
      <div class="right"><%= f.text_field :email, :class => "text_field" %></div>
    </div>
    <div class="group wat-cf">
      <div class="left"><%= f.label :password, :class => "label right" %></div>
      <div class="right"><%= f.password_field :password, :class => "text_field" %></div>
    </div>
    <div class="group wat-cf">
      <div class="left"><%= f.label :password_confirmation, :class => "label right" %></div>
      <div class="right"><%= f.password_field :password_confirmation, :class => "text_field" %><i>Type the password again</i></div>
    </div>
    <div class="group wat-cf">
      <div class="right">
        <button class="button" type="submit">
          <%= image_tag "web-app-theme/icons/key.png" %>
          Create my account
        </button>
      </div>
    </div>
<% end %>

<%= render :partial => "devise/shared/links" %>

  </div>
</div>

<div id="block-login" class="block">
  <h2>Reset password</h2>
  <div class="content login">

<%= render "shared/error_messages" %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form login" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="group wat-cf">
      <div class="left"><%= f.label :password, :class => "label right" %></div>
      <div class="right"><%= f.password_field :password, :class => "text_field" %></div>
    </div>
    <div class="group wat-cf">
      <div class="left"><%= f.label :password_confirmation, :class => "label right" %></div>
      <div class="right"><%= f.password_field :password_confirmation, :class => "text_field" %></div>
    </div>
    <div class="group wat-cf">
      <div class="right">
        <button class="button" type="submit">
          <%= image_tag "web-app-theme/icons/key.png" %>
          Change my password
        </button>
      </div>
    </div>
<% end %>

<%= render :partial => "devise/shared/links" %>

  </div>
</div>

